
<h1>Books</h1>
<table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Opinion</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% @books.each do |book| %>
            <tr>
                <%= link_to book_path(book.id) do%>
                  <td><%= book.title %></td>
                <% end %>
                 <td><%= book.body %></td>


            </tr>
            <% end %>


        </tbody>
    </table>









<h1>New book</h1>
<%= form_with model:@book,local:true do |f| %>
<h4>title</h4>
<%= f.text_field :title %>
<h4>opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book'%>
<% end %>