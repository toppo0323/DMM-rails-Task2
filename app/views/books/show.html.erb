<p class ="message"><%= flash[:succes] %></p>

<h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg",size:'100x100',format: 'no_image.jpg' %>
<h5>name</h5>
    <%= @user.name %>
<h5>introduction</h5>
    <%= @user.introduction %>
<%= link_to "edit",edit_user_path(current_user.id)%>




<h2>New book</h2>
    <%= form_with model:@book,local:true do |f| %>
<h4>title</h4>
    <%= f.text_field :title %>
<h4>opinion</h4>
  　<%= f.text_area :body %>
<%= f.submit 'Create Book'%>
  　<% end %>

<h1>Book detail</h1>
　<%= @showbook.title %>
　<%= @showbook.body %>
　<%= link_to "Destroy",book_path(@showbook),method: :delete ,"data-confirm" => "Are you sure?", class: "link"%>


