<p class ="message"><%= flash[:succes] %></p>


<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
      <table class = "table table-user">
        <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg",size:'100x100',format: 'no_image.jpg' %>
            <tbody>
              <tr>
               <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                  <th><%= @user.introduction %></th>
              </tr>
            </tbody>
      </table>
          <%= link_to "",edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_7693"%>


        <h2>New book</h2>
            <%= form_with model:@book,local:true do |f| %>
          <p>Title</p>
            <%= f.text_field :title %>
          <p>Opinion</p>
            <%= f.text_area :body %>
          <%= f.submit 'Create Book'%>
        <% end %>
    </div>


    <div class = "col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class = "table table-hover table-inverse">
         <tbody>
            <tr>
                <td><%= link_to(user_path(@user.id)) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size:'40x40',format: 'no_image.jpg'%>
                   <div> <%= @user.name %></div>
                <% end %></td>
                
                <td><%= @showbook.title %></td>
                <td><%= @showbook.body %></td>

              <% if @showbook.user_id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@showbook.id), class:"btn btn-sm btn-success"%></td>
                <td><%= link_to "Destroy", book_path(@showbook.id), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-sm btn-danger" %></td>
              <% end %>

            </tr>
         </tbody>
        </table>

    </div>
  </div>
