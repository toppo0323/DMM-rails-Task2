<h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg",size:'100x100',format: 'no_image.jpg' %>
<h5>name</h5>
    <%= @user.name %>
<h5>introduction</h5>
    <%= @user.introduction %>
<%= link_to "edit",edit_user_path(current_user.id)%>


<h2>New book</h2>
      <%= form_with model:@book,local:true do |f| %>
<h4>title</h4>
      <%= f.text_field :title %>
<h4>opinion</h4>
      <%= f.text_area :body %>
<%= f.submit 'Create Book'%>
  <% end %>


<h2>Users</h2>
<table>
    
    <thead>
        <tr>
         <th>image</th>
         <th>name</th>
         <th></th>
        </tr>
    </thead>

    <tbody>
         <% @users.each do |user| %>
         
        <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show",user_path(user.id) , class: "link"%></td>
        </tr>
         <% end %>
    </tbody>
   
</table>